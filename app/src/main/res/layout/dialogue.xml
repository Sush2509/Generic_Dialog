<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialogue_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogue_container"

        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_200sdp"

        android:background="@drawable/dialogue_background"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/dialogue_imageView"

            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"

            android:background="@drawable/caution_dialogue_imageview_bg"
            android:src="@drawable/caution_icon"
            android:layout_marginTop="@dimen/_35sdp"
            android:padding="@dimen/_20sdp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
        </ImageView>

        <TextView
            android:id="@+id/msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/caution_txt_color"
            android:text="@string/error_msg"

            app:layout_constraintTop_toBottomOf="@+id/dialogue_imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        </TextView>

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/caution_txt_color"
            android:text="@string/error_msg"

            app:layout_constraintTop_toBottomOf="@+id/msg_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>